<T3DataStructure>
    <meta>
        <langChildren>1</langChildren>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>Wetteranzeige</sheetTitle>
                <type>array</type>
                <el>
                    <switchableControllerActions>
                        <label>Ansicht</label>
                        <onChange>reload</onChange>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items type="array">
                                <numIndex index="1" type="array">
                                    <label>Tageswetter</label>
                                    <value>Weather->show</value>
                                </numIndex>
                                <numIndex index="2" type="array">
                                    <label>Wetterbericht</label>
                                    <value>Weather->forecast</value>
                                </numIndex>
                                <numIndex index="3" type="array">
                                    <label>Letzte Tagesansicht</label>
                                    <value>Weather->list</value>
                                </numIndex>
                            </items>
                        </config>
                    </switchableControllerActions>
                    <settings.arguments.address>
                        <label>Adresse</label>
                        <config>
                            <type>text</type>
                            <cols>24</cols>
                            <rows>3</rows>
                        </config>
                    </settings.arguments.address>
                    <settings.arguments.appid>
                        <label>Appid</label>
                        <config>
                            <type>number</type>
                            <size>45</size>
                            <max>50</max>
                            <eval>trim</eval>
                        </config>
                    </settings.arguments.appid>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
